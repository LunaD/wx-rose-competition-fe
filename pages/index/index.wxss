/**index.wxss**/
.view-cover {
  height: 100%;
  width: 100%;
  position: fixed;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.img-cover {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  border-radius: 5rpx;
}

.img-cover::after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  pointer-events: none;
  background-image: radial-gradient(circle, rgba(255, 255, 255, 0), rgba(237,237,237, 1) 54%);
}

button {
  margin: 5rpx;
}





.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}